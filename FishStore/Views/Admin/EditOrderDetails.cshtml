@model FishStore.Entities.Ordering.Order
@{
    Layout = "_AdminLayout";
}

<h2>Изменение деталей заказа</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="OrderStatus">Статус заказа:</label>
        <select class="form-control" asp-for="OrderStatusId">
            @foreach(var type in ViewBag.OrderStatuses){
                <option value="@type.ID">@type.Name</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label asp-for="Adress">Адрес доставки:</label>
        <input class="form-control" asp-for="Adress" placeholder="Калуга, Ольговская 40"/>
    </div>
    <div class="form-group">
        <label asp-for="UserId">Id юзера:</label>
        <input class="form-control" asp-for="UserId" disabled placeholder=""/>
    </div>
    <div class="form-group">
        <label asp-for="Cost">Цена:</label>
        <input class="form-control" asp-for="Cost" disabled placeholder=""/>
    </div>
    <button type="submit" class="btn btn-primary">Изменить</button>
</form>
