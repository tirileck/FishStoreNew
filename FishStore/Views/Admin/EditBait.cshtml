@model FishStore.Entities.Products.Bait
@{
    Layout = "_AdminLayout";
}

<h2>Изменение наживки</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="Name">Название:</label>
        <input class="form-control" asp-for="Name" placeholder="Червячок"/>
    </div>
    <div class="form-group">
        <label asp-for="PhotoLink">Ссылка на фото:</label>
        <input class="form-control" asp-for="PhotoLink" placeholder="https://funik.ru/wp-content/uploads/2018/10/17478da42271207e1d86.jpg"/>
    </div>
    <div class="form-group">
        <label asp-for="TypeOfBait">Тип наживки:</label>
        <select class="form-control" asp-for="TypeOfBaitID">
            @foreach(var type in ViewBag.TypeOfBait){
                <option value="@type.ID">@type.Name</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label asp-for="Weight">Вес:</label>
        <input class="form-control" asp-for="Weight" placeholder="20"/>
        <small class="form-text text-muted">Введите вес наживки в граммах.</small>
    </div>
    <div class="form-group">
        <label asp-for="Description">Описание:</label>
        <textarea class="form-control" asp-for="Description" placeholder="Это хороший продукт"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="Cost">Цена:</label>
        <input class="form-control" asp-for="Cost" placeholder="1000000"/>
    </div>
    <button type="submit" class="btn btn-primary">Изменить</button>
</form>
