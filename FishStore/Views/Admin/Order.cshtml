@model IEnumerable<FishStore.Entities.Ordering.Order>
@{
    Layout = "_AdminLayout";
}

<h2>Заказы</h2>
<form method="get" asp-action="Order" asp-controller="Admin">
    <input placeholder="Пупкин Василий" type="text" name="searchText"/>
    <button type="submit" class="btn btn-primary">Поиск</button>
</form>
<table class="table">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Пользователь</th>
            <th scope="col">Дата заказа</th>
            <th scope="col">Стоимость</th>
            <th scope="col">Статус заказа</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var type in Model){
            <tr>
                <th scope="row">@type.ID</th>
                <td>@type.User.Name</td>
                <td>@type.CreateDate.ToString()</td>
                <td>@type.Cost р.</td>
                <td>@type.OrderStatus.Name</td>
                <td>
                    @Html.ActionLink("Подробнее", "AboutOrder", new {id = type.ID }) |
                    @Html.ActionLink("Изменить", "EditOrderDetails", new {id = type.ID }) |
                    @Html.ActionLink("Удалить", "DeleteOrder", new {id = type.ID })
                </td>
            </tr>
        }
    </tbody>
</table>