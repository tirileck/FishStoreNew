@model IEnumerable<FishStore.Entities.Products.Gear>


<br />
<div class="container">
    <h1 class="display-5 ">Снасти:</h1>
    <div class="row bg-light">
        @if (Model != null){
            foreach(var product in Model)
            {
                <a href="@Url.Action("Gear", "Product", new {id = product.ID})" class="rounded p-3 col-2" style="height: 240px;">
                    <div class="" style="background-image: url(@product.PhotoLink); height: 80%; background-size:cover; background-repeat:no-repeat;"> </div>
                    @if(@product.Name.Length <= 35){
                        <div>@product.Name</div>
                    }
                    else
                    {
                        <div>@(product.Name.Substring(0, 32) + "...")</div>
                    }
                    <div>@product.Cost р.</div>
                </a>
            }
        }
        else
        {
            <h3>Книг нема!</h3>
        }

    </div>
</div>